<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cloud.mapper.FireMapper">

    <select id="selectList" resultType="com.example.cloud.model.FireControl">
        select
        id,
        subId,
        fireControlAlarm,
        gasAlarm
        from
        fire_control
    </select>

    <select id="faultCounts" resultType="com.example.cloud.model.FireControl">
        select
        count(*) as totalCounts,
        count(
        case
        when fireControlTotFault = 1 then
        1
        end
        ) as faultCounts
        from
        fire_control
    </select>

    <select id="selectCounts" resultType="java.lang.Integer">
        select count(*)
        from fire_control
    </select>

    <insert id="addOne" parameterType="com.example.cloud.model.FireControl">

    </insert>

</mapper>
